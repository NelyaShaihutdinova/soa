<!DOCTYPE glassfish-ejb-jar PUBLIC
        "-//GlassFish.org//DTD GlassFish Application Server 3.1 EJB 3.1//EN"
        "http://glassfish.org/dtds/glassfish-ejb-jar_3_1-1.dtd">
<glassfish-ejb-jar>
    <enterprise-beans>
        <ejb>
            <ejb-name>DictionaryProcessingBean</ejb-name>
            <bean-pool>
                <steady-pool-size>5</steady-pool-size>
                <max-pool-size>50</max-pool-size>
                <resize-quantity>5</resize-quantity>
                <pool-idle-timeout-in-seconds>600</pool-idle-timeout-in-seconds>
            </bean-pool>
        </ejb>
    </enterprise-beans>
</glassfish-ejb-jar>